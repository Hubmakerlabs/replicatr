type KeyValuePair = record {
  key: text;
  value:vec text;
};

type Event = record{
    id: text; 
    pubkey: text;
    created_at: int; //must be converted to idl.Int
    kind: nat16;
    tags: vec vec text;
    content: text;
    sig: text;
};

type Filter = record{
    ids: vec text;
    kinds: vec nat16;
    authors: vec text;
    tags: vec KeyValuePair;
    since: opt int; //must be converted to idl.Int
    until: opt int; //must be converted to idl.Int
    limit: opt int; //must be converted to idl.Int
    search: text;
};

service : {
  "get_events": (Filter) -> (vec Event ) query;
  "save_event": (Event) -> (text);
};
